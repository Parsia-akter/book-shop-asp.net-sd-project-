
@model SDProject.Models.Product
@{
    ViewData["Title"] = "Create";
}
<br />
<br />

    <h4 class="text-info">ADD PRODUCT </h4>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border box-shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div>@ViewBag.message</div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control box-shadow" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Price" class="form-control box-shadow" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Image" class="form-control box-shadow" type="file" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="CategoryId" asp-items="ViewBag.productTypeId" class="form-control box-shadow"></select>
                </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control box-shadow"></select>
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Quantity" class="form-control box-shadow" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Author" class="form-control box-shadow" />
                </div>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-5">

                    <textarea asp-for="Description" class="form-control box-shadow"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" class="btn btn-outline-primary" value="SAVE" />
                <a asp-action="Index" class="btn btn-outline-success">BACK TO LIST </a>
            </div>
        </div>
    </form>
    

    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

