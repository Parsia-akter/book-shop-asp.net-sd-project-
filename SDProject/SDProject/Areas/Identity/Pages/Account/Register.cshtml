@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<div class="box">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
               <p>Do you want to register as Seller?Then click yes.</p>
           
                <label asp-for="Input.Seller"></label>
          
          
                <input asp-for="Input.Seller" type="checkbox" />
       
            <span asp-validation-for="Input.Seller" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-user-md"></i>Register</button>
    </form>
</div>
<style scoped>
    .box{
    background: #ffffff;
    margin: 0 0 50px;
    border: solid 1px #e6e6e6;
    box-sizing: border-box;
    padding: 40px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, .3);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

